<div class="page-header">
 <h1><a href="<%= @post.url %>"><%= @post.title %><%=@post.comment%></a><br> <small>Submitted by <%= @post.user.email %></small></h1>
</div>
<div class="btn-group">
 <% if @post.url =~ URI::regexp %>
    <%= link_to 'Visit URL', @post.url, class: "btn btn-primary" %>
    <%end %>
</div>
<% if @post.user == current_user %>
 <div class="btn-group">
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
  <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
 </div>
<% end %>
